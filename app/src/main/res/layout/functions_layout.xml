<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_down_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="home键的监听" />

            <Button
                android:id="@+id/text_fold_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="折叠文案" />

            <Button
                android:id="@+id/layout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="layout" />

            <Button
                android:id="@+id/widget_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="widget" />

            <Button
                android:id="@+id/carrousel_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="carrousel" />

            <Button
                android:id="@+id/audio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="audio" />

            <Button
                android:id="@+id/zip_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="zip" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/to_top_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/top" />

    <ImageView
        android:id="@+id/to_bottom_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/bottom" />
</FrameLayout>
